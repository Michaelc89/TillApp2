<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TillPage" android:background="@color/white">
    <TextView
            android:id="@+id/tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="List of fruits."
            android:background="#ffe238"
            android:padding="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="59dp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_clear" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" app:layout_constraintHorizontal_bias="0.0"/>

    <ListView
            android:id="@+id/recipe_list_view"
            android:layout_width="322dp"
            android:layout_height="377dp"
            android:background="?android:attr/activatedBackgroundIndicator"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"

            android:choiceMode="singleChoice"
            android:clickable="true"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp"
            android:listSelector="@android:color/black"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/guideline12"
            app:layout_constraintTop_toBottomOf="@+id/guideline9" />
    <Button
            android:text="Total"
            android:layout_width="73dp"
            android:layout_height="39dp"
            android:id="@+id/button_total"
            android:clickable="true"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline11" android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp" app:layout_constraintStart_toEndOf="@+id/guideline12"
            android:background="@color/btnGreen"/>
    <TextView
            android:text="TextView"

            android:layout_width="340dp"
            android:layout_height="139dp"
            android:id="@+id/textView_display"
            android:background="@color/colorText"
            android:clickable="false" android:textSize="30sp" android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/guideline7"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv"/>
    <Button
            android:text="CLEAR"

            android:layout_width="113dp"
            android:layout_height="118dp"
            android:id="@+id/button_clear" android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/guideline8"
            app:layout_constraintTop_toBottomOf="@+id/tv" android:background="@color/btnGreen"
            android:textColor="@color/colorText" android:layout_marginTop="16dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.62"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.96"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline6"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.77"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.490625"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.88"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline9"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.195"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.41"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.53"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline5"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline10"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline11"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.89"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline12"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.375"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline13"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.74"/>
    <Button
            android:text="VOID\n ITEM"
            android:layout_width="110dp"
            android:layout_height="118dp"
            android:id="@+id/buttonVoid"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv"
            android:background="@color/btnRed"
            android:textColor="@color/colorText" app:layout_constraintStart_toEndOf="@+id/recipe_list_view"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
    <Button
            android:text="REPEAT\n ITEM"
            android:layout_width="110dp"
            android:layout_height="118dp"
            android:id="@+id/buttonRepeat" android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/recipe_list_view"
            app:layout_constraintTop_toBottomOf="@+id/guideline" android:background="@color/btnGreen"
            android:layout_marginTop="15dp"/>
    <Button
            android:text="1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOne"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="15dp"/>
    <Button
            android:text="2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTwo" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonThree"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/guideline13"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline14"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.50727654"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline15"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.87"/>
    <Button
            android:text="4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFour" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFive" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
    />
    <Button
            android:text="6"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSix" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline3"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/guideline13"/>
    <Button
            android:text="7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonSeven" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline10" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="8"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEight" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline10" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNine" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline10" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/guideline13"/>
    <Button
            android:text=".00"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonZeroZero" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline6" app:layout_constraintEnd_toStartOf="@+id/guideline2"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonZero" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline6" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="."
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonPoint" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline6" android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp" app:layout_constraintStart_toEndOf="@+id/guideline13"/>
    <Button
            android:text="€50"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/buttonFifty"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/guideline"/>
    <Button
            android:text="€20"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/buttonTwenty"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/guideline3"/>
    <Button
            android:text="€10"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/buttonTen"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/guideline10"/>
    <Button
            android:text="€5"
            android:layout_width="100dp"
            android:layout_height="wrap_content" android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/guideline6"
            android:id="@+id/buttonFiver"/>
    <Button
            android:text="CASH"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCash" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline11"
            app:layout_constraintEnd_toStartOf="@+id/guideline2" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>
    <Button
            android:text="CARD"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCard" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline11" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Misc\n Item"
            android:layout_width="110dp"
            android:layout_height="118dp"
            android:id="@+id/buttonMisc"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/recipe_list_view" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/guideline10"/>

    <Button
            android:id="@+id/buttonProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="526dp" />


</androidx.constraintlayout.widget.ConstraintLayout>